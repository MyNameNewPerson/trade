# Environment Configuration
NODE_ENV=production
PORT=5000

# Base URL for the application (required for external deployment)
APP_BASE_URL=https://your-domain.com

# Session Configuration (required)
SESSION_SECRET=your-super-secret-session-key-min-32-chars

# Authentication Provider (local by default for external deployment)
AUTH_PROVIDER=local

# Database Configuration (optional - uses in-memory fallback if not provided)
DATABASE_URL=postgresql://user:password@localhost:5432/cryptoflow

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# Feature Flags
FEATURE_REAL_RATES=false

# Legacy Replit Variables (ignore for external deployment)
# REPL_ID=
# ISSUER_URL=
# REPLIT_DOMAINS=